<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="1"


        >

        <TextView
            android:layout_width="398dp"
            android:layout_height="52dp"
            android:text="crops monitor"

            android:background="@color/common_google_signin_btn_text_light_default"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"

        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="226dp"

                android:layout_height="221dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:src="@drawable/light"/>

                <TextView
                    android:id="@+id/textlig"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="LIGHT"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/lightval"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <ProgressBar
                    android:id="@+id/progreslight"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:padding="10dp"

                    android:max="5"

                    android:scaleY="5"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="226dp"

                android:layout_height="221dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:src="@drawable/mois"/>

                <TextView
                    android:id="@+id/textmois"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="MOISTURE"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/moistvalu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <ProgressBar
                    android:id="@+id/progresmois"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:max="100"

                    android:scaleY="5"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="226dp"

                android:layout_height="221dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:src="@drawable/water"/>

                <TextView
                    android:id="@+id/textdist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="WATER LEVEL"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/distval"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <ProgressBar
                    android:id="@+id/progresdist"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:max="100"

                    android:scaleY="5"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="226dp"

                android:layout_height="221dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/motortext"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="MOTOR\n STATUS"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/currstaus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />
                <Button
                    android:id="@+id/motorbut"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"

                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="40dp"/>





            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>


</LinearLayout>